<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/menu_item_settings"
                style="@style/MenuItem"
                android:text="@string/menu_item_settings"
                />
            <TextView
                android:id="@+id/menu_item_export"
                style="@style/MenuItem"
                android:text="@string/menu_item_export"
                />
            <TextView
                android:id="@+id/menu_item_import"
                style="@style/MenuItem"
                android:text="@string/menu_item_import"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/menu_item_help"
                style="@style/MenuItem"
                android:text="@string/menu_item_help"
                />
            <TextView
                android:id="@+id/menu_item_backup"
                style="@style/MenuItem"
                android:text="@string/menu_item_backup"
                />
            <TextView
                android:id="@+id/menu_item_restore"
                style="@style/MenuItem"
                android:text="@string/menu_item_restore"
                />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
